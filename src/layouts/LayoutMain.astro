---
import "../styles/global.css";

const siteInfo = {
    system: 'MT Technology',
    title: 'Home',
    description: 'Desarrollo de paginas web y sistemas a la medida para la resolucion y mejoras de operaciones y procesos de negocio. Desarrollamos soluciones digitales a medida para tu negocio.',
    keywords: 'desarrollo web, desarrollo de software, sistemas a la medida, paginas web, aplicaciones web, desarrollo de aplicaciones, desarrollo de sistemas, soluciones tecnologicas, soluciones digitales a medida',
}

const { system, title, description, keywords } = siteInfo;

import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords} />
        <meta name="author" content="MT Technology" />

		<link
			href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
			integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
			
		<title>{system} - {title}</title>
	</head>
	<body class="bg-[#181f2a] text-white">
		<!-- Header section -->
		<Header />

		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
    }
</style>
